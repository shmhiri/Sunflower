{% extends 'basef.html.twig' %}
{% block content %}
<!-- header start -->
<div class="breadcrumb-area gray-bg">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="index.html">Home</a></li>
                <li class="active"> Claims / List </li>
            </ul>
        </div>
    </div>
</div>
<!-- checkout-area start -->
<div class="checkout-area pb-45 pt-65">
    <div class="container">
        <div class="row">


            <div class="cart-main-area pt-70 pb-75">
                <div class="container">
                    <h3 class="page-title">Your Claims List</h3>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                            <form action="#">
                                <input type="text" name="claim_iduser" id="claim_iduser"   hidden value={{app.user.id|default('')}}>
                                <div class="table-content table-responsive wishlist">
                                    <table>
                                        <thead>
                                        <tr>
                                            <th class="width-1">ID</th>
                                            <th class="width-2">Username</th>
                                            <th class="width-2">Email</th>
                                            <th class="width-3">Motif</th>
                                            <th class="width-4">Date</th>
                                            <th class="width-4">Heure</th>
                                            <th class="width-5">Etat</th>
                                            <th class="width-5">Action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for Appointment in Appointment %}
                                        {% if app.user.id==Appointment.getAppointmentuserid()%}
                                        <tr>
                                            <td class="product-thumbnail">
                                                <p>{{ Appointment.getAppointmentid()}}</p>
                                            </td>
                                            <td class="product-name"><p>{{ Appointment.getAppointmentusername() }}</p></td>
                                            <td class="product-name"><p>{{ Appointment.getAppointmentemail()}}</p></td>
                                            <td class="product-price-cart"><span class="amount"><p>{{ Appointment.getAppointmentmotif()}}</p></span></td>
                                            <td class="product-quantity">
                                                <div class="pro-dec-cart">
                                                   <p>{{ Appointment.getAppointmentdate()|date('d-y-m') }}</p>
                                                </div>
                                            </td>
                                            <td class="product-quantity">
                                                <div class="pro-dec-cart">
                                                    <p>{{ Appointment.getAppointmenttime() }}</p>
                                                </div>
                                            </td>
                                            {% if Appointment.getAppointmentetat()==0 %}
                                            <td class="product-wishlist-cart">
                                                <a href="#">Attente..</a>
                                            </td>

                                                <td class="product-wishlist-cart">
                                                    <a href="{{ path('appointment_supp',{'id':Appointment.getAppointmentid()}) }}">Anuler</a>
                                                </td>
                                                {% else %}
                                                    <td class="product-wishlist-cart">
                                                        <a href="#">Confirmer</a>
                                                    </td>
                                                {% endif %}

                                        </tr>
                                       {% endif %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    <div class="billing-back">
                                        <a href="./ajout"><i class="ion-arrow-up-c"></i>Back</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>



        </div>
                </div>
            </div>



{% endblock %}





