
{% extends 'baseback.html.twig' %}
{% block content %}



    <section class="content">
        <div class="body_scroll">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-7 col-md-6 col-sm-12">
                        <h2>Promotion</h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="Dashboard"><i class="zmdi zmdi-home"></i> Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="#">Promotion</a></li>
                            <li class="breadcrumb-item active">Consulter</li>
                        </ul>
                        <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
                    </div>
                    <div class="col-lg-5 col-md-6 col-sm-12">
                        <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
                    </div>
                </div>
            </div>

            <div class="container-fluid">
                <!-- Basic Examples -->
                <div class="row clearfix">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="header">
                                <h2><strong>Basic</strong> Examples </h2>
                                <ul class="header-dropdown">
                                    <li class="dropdown"> <a href="{{ asset('javascript:void(0);') }}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more"></i> </a>
                                        <ul class="dropdown-menu dropdown-menu-right slideUp">
                                            <li><a href="{{ asset('javascript:void(0);') }}">Action</a></li>
                                            <li><a href="{{ asset('javascript:void(0);') }}">Another action</a></li>
                                            <li><a href="{{ asset('javascript:void(0);') }}">Something else</a></li>
                                        </ul>
                                    </li>
                                    <li class="remove">
                                        <a role="button" class="boxs-close"><i class="zmdi zmdi-close"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <div class="body">

                                {{ form_start(form) }}
                                {{ form_widget(form.nomPromotion, { 'attr': {'class': 'form-control','placeholder':'nomPromotion'} }) }}
                                <center>  {{ form_widget(form.search, { 'attr': {'class': 'icon-circle bg-light-blue'} }) }}</center>

                                {{ form_end(form) }}










                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                        <thead>
                                        <tr>
                                            <th>nom</th>
                                            <th>nomProduit</th>
                                            <th>prixHab(DT)</th>
                                            <th>prixPro(DT)</th>
                                            <th>pourcentage</th>
                                            <th>dateDebut</th>
                                            <th>dateFin</th>
                                            <th>description</th>
                                            <th>action</th>

                                        </tr>
                                        </thead>
                                        <tfoot>
                                        <tr>

                                            <th>nom</th>
                                            <th>nomProduit</th>
                                            <th>prixHab(DT)</th>
                                            <th>prixPro(DT)</th>
                                            <th>pourcentage</th>
                                            <th>dateDebut</th>
                                            <th>dateFin</th>
                                            <th>description</th>
                                            <th>action</th>

                                        </tr>
                                        </tfoot>




                                        <tbody>
                                        {% for promotion in promotions %}

                                            <tr>



                                                <td>{{ promotion.nomPromotion }}</td>
                                                <td>{{ promotion.nomProduit }}</td>
                                                <td>{{ promotion.prixHab }}</td>
                                                <td>{{ promotion.prixPromo }}</td>
                                                <td>{{ promotion.Pourcentage }}</td>
                                                <td>{{ promotion.dateDebut|date('d-m-Y') }}</td>
                                                <td>{{ promotion.dateFin|date('d-m-Y') }}</td>
                                                <td>{{ promotion.description }}</td>
                                                <td><a href="{{ path('promotion_show', { 'idPromotion': promotion.idPromotion }) }}"><input class="icon-circle bg-purple" type="button" Value="show"></a>
                                                    <a href="{{ path('promotion_edit', { 'idPromotion': promotion.idPromotion }) }}"><input class="icon-circle bg-light-blue" type="button" Value="edit"></a></td>













                                            </tr>
                                        {% endfor %}

                                        </tbody>





                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="{{ path('promotion_new') }}">

                    <!-- Exportable Table -->

                    <input type="button"  class="btn btn-primary btn-block waves-effect waves-light" value="Ajouter promotion" />
                </a>
                <!-- Exportable Table -->

            </div>

        </div>
    </section>




{% endblock %}


