{% extends 'baseback.html.twig' %}
{% block content %}

    <div class="table-responsive">
    <h1>Services list</h1>

    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
        <thead>
        <tr>
            <th>Nomservice</th>
            <th>Type</th>
            <th>Prix</th>
            <th>Description</th>
            <th>Etat</th>
            <th>Contact</th>
            <th>Region</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.nomService }}</td>
                <td>{{ service.type }}</td>
                <td>{{ service.prix }}</td>
                <td>{{ service.description }}</td>
                <td>{{ service.etat }}</td>
                <td>{{ service.contact }}</td>
                <td>{{ service.region }}</td>
                <td>
                <img src="{{ asset('uploads/images/' ~ service.image)}}" width="100" height="100" /></td>
                <td>
                    <ul>
                            <a class="btn btn-danger btn-lg "
                               href="{{ path('service_show', { 'idService': service.idService }) }}">
                                <i class="zmdi zmdi-hc-fw"></i>
                            </a>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <ul>

            <a class="btn btn-primary btn-lg"
                    href="{{ path('service_new') }}"><i class="zmdi zmdi-hc-fw">  create </i>
            </a>
    </ul>
{% endblock %}