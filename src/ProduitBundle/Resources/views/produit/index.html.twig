{% extends 'baseback.html.twig' %}

{% block content %}
    <h1>Liste des produits</h1>

    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card">
                <div class="table-responsive">

                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead class="thead-dark">
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Nom produit</th>
                            <th scope="col">Categorie</th>
                            <th scope="col">Prix</th>
                            <th scope="col">Quantit√©</th>
                            <th scope="col">Description</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>

        {% for produit in produits %}
            {% set imag = 'uploads/images/'~produit.image %}
            <tr>

                <td><img src="{{ asset(imag ) }}" width="100" height="100"/> </td>
                <td><a href="{{ path('produit_show', { 'idProduit': produit.idProduit}) }}">{{ produit.nomProduit }}</a></td>

                <td>{{ produit.nomCategorie }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.description }}</td>
                <td>
                    <div class="jsdemo-notification-button">
                    <div>
                        <a class="btn btn-app btn-primary fa fa-eye"  style="height:30px;width:110px" href="{{ path('produit_show', { 'idProduit': produit.idProduit}) }}">Afficher</a>
                    </div>  <div>
                        <a class="btn btn-app btn-primary fa fa-edit" style="height:30px;width:110px" href="{{ path('produit_edit', { 'idProduit': produit.idProduit}) }}">Modifier</a>
                    </div> <div>
                        <a class="btn btn-app btn-primary fa fa-trash"style="height:30px;width:110px" href="{{ path('produit_delete', { 'idProduit': produit.idProduit}) }}">Supprimer</a>
                    </div>
                    </div>
                </td>
            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <ul>
        <a class="btn btn-app btn-primary fa fa-plus btn-lg" href="{{ path('produit_new' ) }}">Ajouter un nouveau produit</a>


    </ul>
{% endblock %}
